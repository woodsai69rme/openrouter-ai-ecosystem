# Load Testing Environment Configuration
# Load testing ports: 6002-6003

# Frontend Configuration
VITE_PORT=6002
VITE_API_URL=http://localhost:6003

# Backend Configuration
PORT=6003
NODE_ENV=testing

# API Configuration
API_BASE_URL=http://localhost:6003/api
CORS_ORIGIN=http://localhost:6002

# Load Testing Specific Configuration
BATCH_SIZE=50
MAX_CONCURRENT_PROCESSES=20
REQUEST_TIMEOUT=30000
CONNECTION_POOL_SIZE=100

# Rate Limiting (Higher limits for load testing)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Performance Monitoring
ENABLE_METRICS=true
METRICS_INTERVAL=5000

# Logging
LOG_LEVEL=warn
LOG_FILE=./logs