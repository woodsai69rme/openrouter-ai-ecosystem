# Multi-Instance Environment Configuration
# Multiple instances across ports 6000-6010

# Instance 1: Main Testing (6000-6001)
INSTANCE1_FRONTEND_PORT=6000
INSTANCE1_BACKEND_PORT=6001
INSTANCE1_NAME=main-testing

# Instance 2: Load Testing (6002-6003)
INSTANCE2_FRONTEND_PORT=6002
INSTANCE2_BACKEND_PORT=6003
INSTANCE2_NAME=load-testing

# Instance 3: Development (6004-6005)
INSTANCE3_FRONTEND_PORT=6004
INSTANCE3_BACKEND_PORT=6005
INSTANCE3_NAME=development

# Instance 4: Stress Testing (6006-6007)
INSTANCE4_FRONTEND_PORT=6006
INSTANCE4_BACKEND_PORT=6007
INSTANCE4_NAME=stress-testing

# Instance 5: Backup (6008-6009)
INSTANCE5_FRONTEND_PORT=6008
INSTANCE5_BACKEND_PORT=6009
INSTANCE5_NAME=backup

# Global Configuration
NODE_ENV=multi-instance
ENABLE_CLUSTERING=true
CLUSTER_WORKERS=4

# Shared Resources
SHARED_LOGS_DIR=./logs/multi-instance
SHARED_DOCS_DIR=./docs
SHARED_CACHE_DIR=./cache

# Load Balancing
ENABLE_LOAD_BALANCER=true
LOAD_BALANCER_PORT=6010
HEALTH_CHECK_INTERVAL=30000

# Monitoring
ENABLE_MONITORING=true
MONITORING_PORT=6011
METRICS_COLLECTION=true